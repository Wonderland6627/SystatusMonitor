<Window x:Class="SystatusMonitor.FloatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SystatusMonitor"
        mc:Ignorable="d"
        Title="FloatWindow" Height="100" Width="100"
        WindowStyle="None" Topmost="True"
        AllowsTransparency="True" Background="Transparent" >
    <Grid>
        
        <Ellipse Width="100" Height="100" Stroke="Transparent">
            <Ellipse.Fill>
                <SolidColorBrush Color="#FF1E90FF" Opacity="1"/>
            </Ellipse.Fill>
        </Ellipse>

        <Path Name="cpuPathBG" Stroke="#808080" StrokeThickness="10"
        Data="M50,10 A40,40 0 1,1 50,90 A40,40 0 1,1 50,10"/>
        <Path Name="cpuPath" Stroke="#FF8533" StrokeStartLineCap="Round" StrokeEndLineCap="Round" />
        <Path Name="gpuPath" Stroke="#FF1" StrokeStartLineCap="Round" StrokeEndLineCap="Round"/>
        
        <Label Name="lbValue" Content="50%" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="14"/>

    </Grid>
</Window>
